        TTL     The Podule manager.
        SUBT    Get all sources => Podule.s.GetAll

        GET     Hdr:ListOpts
        GET     Hdr:Macros
        GET     Hdr:System
        GET     Hdr:Machine.<Machine>
        $GetIO
        GET     Hdr:CMOS
        GET     Hdr:ModHand
        GET     Hdr:Debug
        GET     Hdr:Podule
        GET     Hdr:FSNumbers
        GET     Hdr:HighFSI
        GET     Hdr:NewErrors
        GET     Hdr:Services
        GET     Hdr:Tokens
        GET     Hdr:Proc
        GET     Hdr:Symbols
        GET     Hdr:MsgTrans
        GET     Hdr:PoduleReg

        GET     VersionASM

        GBLL    ReleaseVersion
ReleaseVersion  SETL    {TRUE}

  [ No32bitCode
        ; This is always true, but we only need warn if the build wants no 32-bit code
        !       0, "Module relies on 32-bit instructions - not ARM2/3 safe"
  ]

        GBLS    GetHelpTexts
  [ International_Help <> 0
GetHelpTexts    SETS    "GET HelpTexts"
  |
GetHelpTexts    SETS    "GET HelpTokens.s"
  ]

        AREA Podule_code, CODE, READONLY

        GET     Module.s
        GET     Tables.s
        GET     Interface.s
        GET     Commands.s
        GET     Errors.s
        GET     ROMExtend.s
        $GetHelpTexts
        GET     MsgCode.s

        END

VSyncHandler
        Push    "r9, lr"

      [ debugsy
        LDR     r1, VSyncCounts
        ADD     r1, r1, #1
        STR     r1, VSyncCounts
      ]

        ; Clear that interrupt (NB. HAL call might trash r12)
        LDR     r0, DevDesc
        LDR     r0, [r0, #HALDevice_Device]
        LDR     r1, ClearVSyncFn
        LDR     r9, ClearVSyncSB
        MOV     lr, pc
        MOV     pc, r1

        ; Do flyback side effects
        MRS     r9, CPSR
        ASSERT  SVC32_mode :OR: IRQ32_mode = SVC32_mode
        ORR     lr, r9, #SVC32_mode
        MSR     CPSR_c, lr
        Push    "r4, r9, lr"
        MOV     r4, #GraphicsV_VSync
        MOV     r9, #GraphicsV
        SWI     XOS_CallAVector
        Pull    "r4, r9, lr"
        MSR     CPSR_c, r9

        Pull    "r9, pc"

        END

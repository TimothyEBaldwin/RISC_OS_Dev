/* c.makejhdr - simple program to make suitable assembler header
files from certain C structure defintions, to make sharing of those
structures between C and assembler a little bit easier. */

#include <stdio.h>
#include <string.h>

#include "jinclude.h"

int main(int argc, char **argv)
{
  HUFF_TBL *t;
  decompress_info_ptr cinfo;

  printf("; s.JHdr, generated by MakeJHdr %s %s.\n\n", __DATE__, __TIME__);

  printf("huff_tbl_maxcode * %i\n", (char*)&t->maxcode[0] - (char*)t);
  printf("huff_tbl_valptr * %i\n", (char*)&t->valptr[0] - (char*)t);
  printf("huff_tbl_huffval * %i\n", (char*)&t->huffval[0] - (char*)t);
  printf("huff_tbl_shortcut * %i\n", (char*)&t->shortcut[0] - (char*)t);

  printf("\n");

  printf("cinfo_next_input_byte * %i\n", (char*)&cinfo->next_input_byte - (char*)cinfo);
  printf("cinfo_get_buffer * %i\n", (char*)&cinfo->get_buffer - (char*)cinfo);
  printf("cinfo_bits_left * %i\n", (char*)&cinfo->bits_left - (char*)cinfo);
  printf("cinfo_buffer_end * %i\n", (char*)&cinfo->buffer_end - (char*)cinfo);

  printf("\n        END\n\n");

  return 0;
}

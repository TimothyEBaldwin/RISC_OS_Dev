;;-----------------------------------------------------------------------------
;; Title:    A1 Wimp System
;; Author:   Neil Raine
;;-----------------------------------------------------------------------------

        AREA    |Asm$$Code|, CODE, READONLY

Module_BaseAddr

        GET     Hdr:ListOpts
        GET     Hdr:Macros
        GET     Hdr:System
        GET     Hdr:Machine.<Machine>
        $GetIO
        GET     Hdr:CMOS
        GET     Hdr:PublicWS               ; for SvcTable
        GET     Hdr:ModHand
        GET     Hdr:Proc
        GET     Hdr:EnvNumbers
        GET     Hdr:Services
        GET     Hdr:UpCall
        GET     Hdr:VduExt
        GET     Hdr:FSNumbers
        GET     Hdr:HighFSI
        GET     Hdr:HostFS
        GET     Hdr:NDRDebug
        GET     Hdr:Font
        GET     Hdr:Wimp
        GET     Hdr:Messages
        GET     Hdr:NewErrors
        GET     Hdr:Sprite
        GET     Hdr:Variables
        GET     Hdr:Hourglass
        GET     Hdr:ResourceFS
        GET     Hdr:Portable
        GET     Hdr:MsgTrans
        GET     hdr:ColourTran
        GET     hdr:FPEmulator
        GET     hdr:Territory
        GET     hdr:Switcher
        GET     hdr:PDriver
        GET     hdr:ScrBlank
        GET     hdr:OsWords
        GET     hdr:Countries

        GET     VersionASM

        GET     hdr.WIMPMacros
        GET     hdr.IconHigh

	GBLL	true
	GBLL	false
true	SETL	{TRUE}
false	SETL	{FALSE}

        GBLS    LoadWimpOptions
      [ Options = ""
LoadWimpOptions SETS "GET Options.s.<System>"
      |
LoadWimpOptions SETS "GET Options.s.$Options"
      ]

	GET	Options.s.!Default
        $LoadWimpOptions
	GET     Hdr:ImageSize.<ImageSize>
	GET	Options.s.!Common
	GET	Options.s.!Debug
        GET     s.Wimp01
        GET     s.Memory
        GET     s.Wimp02
        GET     s.Watchdog
      [ ThreeDPatch
        GET     s.Tiling3D
      |
        GET     s.Tiling
      ]
        GET     s.Wimp03
        GET     s.Wimp04
        GET     s.Wimp05
        GET     s.Wimp06
        GET     s.Iconbar
        GET     s.Wimp07
        GET     s.ProgErrs
        GET     s.Wimp08
        GET     s.Wimp09
        GET     s.Wimp10
        GET     s.NewSWIs
        GET     s.AutoScroll

        END

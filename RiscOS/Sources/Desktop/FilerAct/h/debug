/*
        Header for debugging Filer_Action
*/

#ifndef debug
  #ifdef debugtube
    #define debug
  #else
  #ifdef debugfile
    #define debug
  #endif
  #endif
#endif

#ifdef debug

#include "werr.h"

#define assert( e ) ((e) ? (void)0 : werr(1, "assert failed: '%s' in file %s at line %d", #e, __FILE__, __LINE__))

#ifdef debugfile
extern FILE *debugf;
#endif

extern void dprintf( const char *str, ... );
#define DEBUG(x) dprintf x

#else

#define DEBUG(x)
#define dprintf(...)
#define assert( ignore )

#endif

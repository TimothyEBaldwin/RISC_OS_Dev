        GET     Hdr:ListOpts
        GET     Hdr:Macros
        GET     Hdr:System
        GET     Hdr:LinuxSYscalls

        IMPORT  __PVirt_LinuxSyscall

        AREA    |ASM|, CODE, READONLY

        EXPORT  raise_event
raise_event
        STMFD   sp!, {r0-r2, r7, lr}
        SUB     sp, sp, #20
        LDR     r7, =__NR_getsockname
        MOV     r0, r12
        MOV     r1, sp
        ADD     r2, sp, #16
        MOV     lr, #16
        STR     lr, [r1]
        STR     lr, [r2]
        BL      __PVirt_LinuxSyscall
        LDRH    r3, [sp, #2]
        ADD     sp, sp, #20
        MOV     r0, #19
        MOV     r1, #1
        MOV     r2, r12
        SWI     XOS_GenerateEvent
        LDMFD   sp!, {r0-r2, r7, pc}
        END
